<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.NotificationFragment"
    android:id="@+id/swipeRefresh"
    android:background="@color/colorBack">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Updated: 13/20/20 20:02:20"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:id="@+id/updateTime"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="5dp"

                android:backgroundTint="@color/colorBackLight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Cases"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#FFA000"
                        />
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_weight=".9"
                            android:layout_height="60dp"
                            android:src="@drawable/casese"
                            android:tint="#FFA000"

                            android:tintMode="src_atop"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:layout_weight=".5"
                            android:textSize="45sp"
                            android:textStyle="bold"
                            android:id="@+id/totalCase"
                            android:gravity="right|center"
                            android:textColor="#FFA000"
                            />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="5dp"

                android:backgroundTint="@color/colorBackLight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active Cases"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#F57C00"
                        />
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_weight=".9"
                            android:layout_height="60dp"
                            android:src="@drawable/fever"
                            android:tint="#F57C00"

                            android:tintMode="src_atop"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:layout_weight=".5"
                            android:textSize="45sp"
                            android:textStyle="bold"
                            android:id="@+id/activeCases"
                            android:gravity="right|center"
                            android:textColor="#F57C00"
                            />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="5dp"

                android:backgroundTint="@color/colorBackLight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Deaths"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#E64A19"
                        />
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_weight=".9"
                            android:layout_height="60dp"
                            android:src="@drawable/death"
                            android:tint="#E64A19"

                            android:tintMode="src_atop"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:id="@+id/totalDeaths"
                            android:layout_weight=".5"
                            android:textSize="45sp"
                            android:textStyle="bold"
                            android:gravity="right|center"
                            android:textColor="#E64A19"
                            />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="5dp"

                android:backgroundTint="@color/colorBackLight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Recovered"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#689F38"
                        />
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_weight=".9"
                            android:layout_height="60dp"
                            android:src="@drawable/health"
                            android:tint="#689F38"

                            android:tintMode="src_atop"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:layout_weight=".5"
                            android:textSize="45sp"
                            android:id="@+id/totalRecovered"
                            android:textStyle="bold"
                            android:gravity="right|center"
                            android:textColor="#689F38"
                            />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="5dp"

                android:backgroundTint="@color/colorBackLight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Today New Cases"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#FDD835"
                        />
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_weight=".9"
                            android:layout_height="60dp"
                            android:src="@drawable/list"
                            android:tint="#FDD835"

                            android:tintMode="src_atop"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:layout_weight=".5"
                            android:textSize="45sp"
                            android:textStyle="bold"
                            android:id="@+id/newCases"
                            android:gravity="right|center"
                            android:textColor="#FDD835"
                            />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="5dp"

                android:backgroundTint="@color/colorBackLight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Today Deaths"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#E53935"
                        />
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_weight=".9"
                            android:layout_height="60dp"
                            android:src="@drawable/sad"
                            android:tint="#E53935"

                            android:tintMode="src_atop"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:layout_weight=".5"
                            android:textSize="45sp"
                            android:textStyle="bold"
                            android:id="@+id/newDeath"
                            android:gravity="right|center"
                            android:textColor="#E53935"
                            />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


